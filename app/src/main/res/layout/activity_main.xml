<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/flashcard_question"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="7dp"
        android:background="@drawable/solid_color_shape"
        android:elevation="5dp"
        android:text="What is the powerhouse of the cell?"
        android:textAlignment="center"
        android:textColor="@color/pastelOrange"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/flashcard_answer"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="119dp"
        android:layout_marginEnd="0dp"
        android:background="@color/black"
        android:text="The mitochondria!"
        android:textColor="@color/bloodOrange"
        android:textAlignment="center"
        android:textSize="40sp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/addButton"
        android:layout_width="125dp"
        android:layout_height="62dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="339dp"
        android:layout_marginEnd="-7dp"
        android:src="@drawable/ic_add" />

</RelativeLayout>